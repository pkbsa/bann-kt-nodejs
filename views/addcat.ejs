    <div class="container">
      <div class="container-1">
        <h1>เพิ่มแมว  (<a href="./cats">Go</a>)</h1>

        <form action="/addcat" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="col">
              <div class="image-preview" id="imagePreview">
                <img src="" alt="Image Preview" class="image-preview__image" />
                <span class="image-preview__default-text">Image Preview</span>
              </div>
              <input
                type="file"
                name="sampleFile"
                id="sampleFile"
                accept="image/*"
                required
              /><br />
            </div>
            <div class="col">
              <div class="col-new2">
                <div class="inp">
                    <label for="name">Breed :</label><Br />
                    <select name="name" id="name" required>
                      <option value="British Short Hair">British ShortHair</option>
                      <option value="British Long Hair">British LongHair</option>
                    </select>
                    <label for="name">DOB :</label><Br />
                    <input type="text" id="age" name="age" required/><Br />
                    <label for="name">Color :</label><Br />
                    <input type="text" id="color" name="color" required/><Br />
                    <label for="name" >Price :</label><Br />
                    <input type="text" id="price" name="price" required/><Br />
                    <label for="gender">Gender :</label><Br />
                    <input type="radio" id="male" name="gender" value="male" required/>
                    <label for="css">Male</label>
                    <input type="radio" id="female" name="gender" value="female" />
                    <label for="html">Female</label><Br>
                    <label for="status" id="status">Status :</label><Br />
                    <input type="radio" id="available" name="status" value=1 required />
                    <label for="available">ว่าง</label>
                    <input type="radio" id="notavalible" name="status" value=0 />
                    <label for="notavalible">ติดจอง</label><Br>
                </div>
              </div>
            </div>
          </div>
          <div class="flex">
            <input type="submit" class="btn btn-success">
          </div>
        </form>
      </div>
      <div class="row d-flex align-content-start flex-wrap">
        <% for(var c of cats) { %>
        <div class="col">
          <div class="card">
            <% if(c.image) {%>
            <img
              src="./images/catlist/<%=c.image%>"
              class="card-img-top"
              alt="..."
            />
            <% } else {%>
            <img
              src="./images/catlist/nopicture.png"
              class="card-img-top"
              alt="..."
            />
            <% } %>
            <div class="card-body">
              <h4 class="card-title">
                <%if (c.name.toLowerCase()==="british short hair") {%>
                  <B>British Shorthair</B>
                <% } else { %>
                  <B>British Longhair</B>
                <% } %>
                <% if (c.gender.toLowerCase() === "male") {%>
                <i class="fa-solid fa-mars male"></i>
                <% } else { %>
                <i class="fa-solid fa-venus female"></i>
                <% } %>
              </h4>
              <p class="card-text">
                DOB : <%=c.age%><br />
                Color: <%=c.color%><br /><b>฿ <%=c.price%></b>
              </p>
              <% if (c.status === 0) {%>
              <button class="reserved">ติดจอง</button>
              <button class="notready">Not Available</button>
              <% } else { %>
              <button class="ready">รอผู้ปกครอง</button>
              <button>Available</button>
              <% } %>
            </div>
          </div>
        
          <div class="update">
            <button name="id" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%=c.id%>">แก้ไขข้อมูล</button>
            <form action="/deletecat" method="POST">
              <button class="btn btn-danger" name="id" value="<%=c.id%>" type="submit">Delete</button>
            </form>
          </div>
         
          
          <div class="modal fade" id="staticBackdrop<%=c.id%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">แก้ไขข้อมูล (<%=c.id%>)</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
              <form action="/updatecats" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="col1">
                    <div> 
                      <label for="name">Breed :</label><Br />
                      <select name="name" id="name">
                        <%if (c.name.toLowerCase()==="british short hair") {%>
                          <option value="British Short Hair" selected>British ShortHair</option>
                          <option value="British Long Hair">British LongHair</option>
                        <% } else { %>
                          <option value="British Short Hair">British ShortHair</option>
                          <option value="British Long Hair" selected>British LongHair</option>
                        <% } %>
                      </select>
                    </div>
                    <div> 
                      <label for="name">DOB :</label><Br />
                      <input type="text" id="age" name="age" value="<%=c.age%>"><Br />
                    </div>
                    <div> 
                      <label for="name">Color :</label><Br />
                      <input type="text" id="color" name="color" value="<%=c.color%>"><Br />
                    </div>
                    <div> 
                      <label for="name" >Price :</label><Br />
                      <input type="text" id="price" name="price" value="<%=c.price%>"><Br />
                    </div>
                    <div> 
                      <label for="gender">Gender :</label><Br />
                      <%if (c.gender.toLowerCase()==="male") {%>
                        <input type="radio" id="male" name="gender" value="male" checked/>
                        <label for="css">Male</label>
                        <input type="radio" id="female" name="gender" value="female" />
                        <label for="html">Female</label><Br>
                      <% }else{ %>
                        <input type="radio" id="male" name="gender" value="male"/>
                        <label for="css">Male</label>
                        <input type="radio" id="female" name="gender" value="female" checked />
                        <label for="html">Female</label><Br>
                      <% } %>
                    </div>
                    <div>
                      <label for="status" id="status">Status :</label><Br />
                      <%if (c.status === 1) {%>
                        <input type="radio" id="available" name="status" value=1 checked/>
                        <label for="available">ว่าง</label>
                        <input type="radio" id="notavalible" name="status" value=0 />
                        <label for="notavalible">ติดจอง</label><Br>
                      <% }else{ %>
                        <input type="radio" id="available" name="status" value=1  />
                        <label for="available">ว่าง</label>
                        <input type="radio" id="notavalible" name="status" value=0 checked/>
                        <label for="notavalible">ติดจอง</label><Br>
                      <% } %>
                    </div>
                    <div class="col2" style="margin-top: 30px;">
                      <p style="color: red;">*หากไม่เปลี่ยนรูปไม่ต้องเลือก</p>
                      <input
                        type="file"
                        name="sampleFile"
                        id="sampleFile"
                        accept="image/*"
                      /><br />
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary" name="id" value="<%=c.id%>">Confirm</button>
                </div>
              </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <% for (i=0;i<4-(cats.length%4);i++) {%>
          <div class="col hide">
            <div class="card hide">

            </div>
          </div>
        <% } %>
        
      </div>
    </div>
    <script>
      const inpFile = document.getElementById("sampleFile");
      const previewContainer = document.getElementById("imagePreview");
      const previewImage = previewContainer.querySelector(
        ".image-preview__image"
      );
      const previewDefaultText = previewContainer.querySelector(
        ".image-preview__default-text"
      );

      inpFile.addEventListener("change", function () {
        const file = this.files[0];

        if (file) {
          const reader = new FileReader();

          previewDefaultText.style.display = "none";
          previewImage.style.display = "block";

          reader.addEventListener("load", function () {
            previewImage.setAttribute("src", this.result);
          });

          reader.readAsDataURL(file);
        } else {
          previewDefaultText.style.display = null;
          previewImage.style.display = null;
          previewImage.setAttribute("src", "");
        }
      });
    </script>

